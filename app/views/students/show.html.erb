<%= authorized_for(@student.id) %>
<h1><%= @student.first_name%> <%= @student.last_name %></h1>
<h3><%= @student.email %> </h3> <br>

<% if @student.house_id != nil %>
  <h2>House: <%= link_to @student.house.name, house_path(@student.house) %></h2>
<% else  %>
  <h2> <%= link_to 'Sorting Ceremony', getsort_path, class: 'submit_button' %></h2>
<% end %>

<% if flash[:authorized]  %>
  <div class="errors_hp">
    <%= flash[:authorized] %>
  </div>
<% end %>

<% if @student.lessons.any?%>
    <h3> Classes you are currently enrolled in:</h3><br>
      <ul>
        <% @student.lessons.each do |lesson| %>
        <li> <%= lesson.professor.subject_name %> </li>
        <% end %>
      </ul>
<% else %>
    <h2> <%= link_to 'Enrol in some classes', new_lesson_path %> </h2>
<% end %>


<% if @student.patronu_id != nil %>
  <h2>Patronus: <%= @student.patronu.name%> </h2>
<% else  %>
<h2> <%= link_to 'Discover Patronus', getpatronu_path, class: 'submit_button' %></h2>
<% end %>
