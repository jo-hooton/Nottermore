<div class='main-content'>
<h1>Houses of Hogwarts School of Witchcraft and Wizardry</h1>

  <% @houses.each do |house| %>
    <div class="patronus" style='background-image: url(<%= asset_path("house/#{house.name.downcase}.jpg") %>)'>
      <br>
     <h3><%= link_to house.name, house_path(house) %></h3><br>
     <%= link_to image_tag("house/#{house.name.downcase}.jpg"), house_path(house) %>
    </div>
  <% end %>

</div>
